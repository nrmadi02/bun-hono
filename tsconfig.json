{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "bundler",
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
		"baseUrl": "./",
		"paths": {
			"../*": ["./src/*"]
		},
		"outDir": "./dist",
		"types": ["bun", "bun-types"],
  }
}